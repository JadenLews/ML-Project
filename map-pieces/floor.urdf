<robot name="floor">
  <link name="base">
    <!-- Horizontal mini-wall (right side) -->
    <visual>
      <geometry>
        <box size="1 1 1"/>
      </geometry>
    </visual>

    <!-- Matching collision for horizontal mini-wall -->
    <collision>
      <geometry>
        <box size="0.5 0.1 1"/>
      </geometry>
    </collision>

    <!-- Inertial (static) -->
    <inertial>
      <mass value="0"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
  </link>
</robot>